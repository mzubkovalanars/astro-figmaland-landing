---
import { Image } from 'astro:assets';
import Section from '@components/common/Section.astro';
import FeatureCard from '@components/Main/FeatureSection/FeatureCard.astro';
import FeaturesImg from '@assets/images/features.png';
import { featureCards } from '@utils/constants';
---

<Section title='main.features' description='main.features.desc' isSecondarySection>
  <Fragment slot='content-section'>
    <div
      class='mt-[80px] flex flex-nowrap items-center justify-center gap-[35px] max-w-[1088px] text-center lg:flex-wrap md:mt-[27px] md:gap-[27px]'
    >
      <Image
        src={FeaturesImg}
        alt='control panel'
        width={752}
        height={759}
        quality='max'
        densities={[1, 1.5, 2]}
      />
      <div class="flex flex-col p-5 gap-6">
        {
          featureCards.map((card) => (
            <FeatureCard title={card.title} description={card.description} src={card.src} />
          ))
        }
      </div>
    </div>
  </Fragment>
</Section>
