---
import { t } from "i18next";
---

<section class='pt-[50px] pb-[120px] md:pb-[100px]'>
  <div
    class='overflow-hidden flex lg:flex-col items-center justify-between gap-[86px] lg:gap-0 my-0 mx-auto my-20 sm:px-4 max-w-[1220px] bg-primary-foreground lg:bg-secondary-foreground rounded-[33px] lg:rounded-none'
  >
    <div
      class='flex flex-1 flex-col items-start lg:items-center justify-start max-w-[500px] min-w-[200px] ml-[86px] lg:ml-0 py-[62px] md:py-[104px]'
    >
      <h2
        class='text-[52px] sm:text-3xl leading-[62px] mb-[37px] lg:text-center md:max-w-[340px]'
      >
        {t("main.prototyping")}
      </h2>
      <a href='#' target='_blank' class='btn btn-primary small'
        >{t("btn-try-for-free")}</a
      >
    </div>
    <div
      class="bg-[url('/images/prototyping.png')] md:bg-[url('/images/prototyping-mob.png')] bg-center bg-no-repeat max-w-[585px] h-[365px] sm:max-w-[541px] w-full md:h-[384px]"
    >
    </div>
  </div>
</section>
