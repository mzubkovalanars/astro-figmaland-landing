---
import {
  getLangFromUrl,
  useTranslatedPath,
} from "@/i18n/utils";
import { t } from "i18next";

const lang = getLangFromUrl(Astro.url);
const translatePath = useTranslatedPath(lang);

interface Props {
  status: string;
  text: string;
}

const { status, text } = Astro.props;
---

<div class='flex flex-col items-center gap-5 font-grotesk'>
  <h1 class='text-8xl'>{status}</h1>
  <p class='text-2xl'>{t(text)}</p>
  <a href={translatePath("/")} class='btn-primary text-center w-40 rounded-[32px]'>{t("nav.home")}</a>
</div>
