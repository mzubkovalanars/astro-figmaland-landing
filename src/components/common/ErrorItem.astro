---
import { t } from 'i18next';
import { localizePath } from 'astro-i18next';

interface Props {
  status: string;
  text: string;
}

const { status, text } = Astro.props;
---

<div class="flex flex-col items-center gap-5 font-grotesk">
  <h1 class="text-8xl">{status}</h1>
  <p class="text-2xl">{t(text)}</p>
  <a href={localizePath('/')} class="btn-primary w-40 rounded-[32px] text-center">{t('nav.home')}</a
  >
</div>
