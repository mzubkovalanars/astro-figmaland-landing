---
import { t } from "i18next";

interface Props {
  title: string;
  description: string;
  isSecondarySection?: boolean;
}

const { title, description, isSecondarySection = "" } = Astro.props;
---

<section class='section'>
  <div
    class={`flex flex-col items-center w-full my-0 mx-auto ${isSecondarySection ? "py-[62px]" : "py-[50px]"}`}
  >
    <div
      class='flex flex-col items-center text-center max-w-[710px] paddings-x'
    >
      <h2
        class={`text-[52px] sm:text-3xl leading-[62px] ${isSecondarySection ? "mb-[27px] uppercase" : "mb-[10px] p-[10px]"}`}
      >
        {t(title)}
      </h2>
      {description && (
          <p
            class={`text-xl sm:text-xl whitespace-pre-line ${isSecondarySection ? "p-0" : "p-[10px]"}`}
          >
            {t(description)}
          </p>
        )}
    </div>
    <slot name='content-section' />
  </div>
</section>
