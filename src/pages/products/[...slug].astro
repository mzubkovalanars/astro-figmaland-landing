---
import ProductSingle from '@components/Products/ProductSingle.astro';
import Layout from '@layouts/Layout.astro';
import { getProduct } from '@sanityClient/client';
import type { Product } from '@utils/interfaces';
import { changeLanguage } from 'i18next';

changeLanguage('en');

export const prerender = false;
const { slug } = Astro.params;
const data: Product = await getProduct(slug!, 'en');
---

<Layout title={data.name} description={data.name + data.brand}>
  <ProductSingle product={data} />
</Layout>
